{
  "plugin_id": "inventory",
  "name": "Inventory Manager",
  "name_es": "Gestión de Inventario",
  "version": "1.0.0",
  "category": "inventory",
  "description": "Comprehensive inventory management plugin with products, categories, stock control, and CSV/Excel import/export",
  "description_es": "Plugin completo para gestión de inventario con productos, categorías, control de stock, e importación/exportación de CSV y Excel",
  "author": "ERPlora Team",
  "author_email": "plugins@erplora.com",
  "license": "MIT",
  "homepage": "https://github.com/erplora-plugins/erplora-plugin-inventory",
  "repository": "https://github.com/erplora-plugins/erplora-plugin-inventory.git",
  "documentation": "https://docs.erplora.com/plugins/inventory",

  "compatibility": {
    "min_cpos_version": "1.0.0",
    "max_cpos_version": "2.0.0",
    "django_version": "5.1.x"
  },

  "dependencies": {
    "python": [
      "Pillow>=10.0.0",
      "openpyxl>=3.1.0"
    ],
    "plugins": []
  },

  "features": {
    "i18n": true,
    "languages": ["en", "es"],
    "api": true,
    "webhooks": false,
    "background_tasks": false,
    "supports_images": true,
    "supports_export": true,
    "supports_import": true
  },

  "permissions": [
    "inventory.view_product",
    "inventory.add_product",
    "inventory.change_product",
    "inventory.delete_product",
    "inventory.view_category",
    "inventory.add_category",
    "inventory.change_category",
    "inventory.delete_category"
  ],

  "menu": {
    "label": "Inventory",
    "label_es": "Inventario",
    "icon": "cube-outline",
    "order": 10,
    "items": [
      {
        "label": "Products",
        "label_es": "Productos",
        "url": "/plugins/inventory/products/",
        "icon": "cube-outline"
      },
      {
        "label": "Categories",
        "label_es": "Categorías",
        "url": "/plugins/inventory/categories/",
        "icon": "albums-outline"
      },
      {
        "label": "Settings",
        "label_es": "Configuración",
        "url": "/plugins/inventory/settings/",
        "icon": "settings-outline"
      }
    ]
  },

  "settings": {
    "allow_negative_stock": {
      "type": "boolean",
      "default": false,
      "label": "Allow Negative Stock",
      "label_es": "Permitir Stock Negativo",
      "description": "Allow products to have negative stock values",
      "description_es": "Permitir que los productos tengan valores de stock negativos"
    },
    "default_currency": {
      "type": "string",
      "default": "USD",
      "choices": ["USD", "EUR", "MXN"],
      "label": "Default Currency",
      "label_es": "Moneda Predeterminada",
      "description": "Default currency for product pricing",
      "description_es": "Moneda predeterminada para precios de productos"
    },
    "low_stock_alert_enabled": {
      "type": "boolean",
      "default": true,
      "label": "Low Stock Alerts",
      "label_es": "Alertas de Stock Bajo",
      "description": "Send alerts when products reach low stock threshold",
      "description_es": "Enviar alertas cuando los productos alcancen el umbral de stock bajo"
    }
  },

  "api_endpoints": [
    {
      "path": "/api/list/",
      "method": "GET",
      "description": "List products with pagination and search"
    },
    {
      "path": "/api/categories/",
      "method": "GET",
      "description": "List active categories"
    },
    {
      "path": "/create/",
      "method": "POST",
      "description": "Create a new product"
    },
    {
      "path": "/edit/<int:pk>/",
      "method": "POST",
      "description": "Update an existing product"
    },
    {
      "path": "/delete/<int:pk>/",
      "method": "POST",
      "description": "Delete a product"
    },
    {
      "path": "/export/csv/",
      "method": "GET",
      "description": "Export products to CSV"
    },
    {
      "path": "/import/csv/",
      "method": "POST",
      "description": "Import products from CSV"
    },
    {
      "path": "/import/excel/",
      "method": "POST",
      "description": "Import products from Excel"
    }
  ],

  "database": {
    "migrations": true,
    "models": ["Product", "Category"]
  },

  "static_files": {
    "css": ["inventory/css/inventory.css"],
    "js": [
      "inventory/js/avatar.js",
      "inventory/js/inventory.js"
    ]
  },

  "media_uploads": {
    "products": "inventory/products/images/",
    "categories": "inventory/categories/"
  },

  "changelog": {
    "1.0.0": {
      "date": "2025-01-04",
      "changes": [
        "Initial release",
        "Product CRUD operations with image support",
        "Category management with images and colors",
        "Multi-language support (English/Spanish)",
        "CSV/Excel import/export functionality",
        "Avatar system with letter fallback",
        "Search and pagination",
        "Stock management with low stock alerts",
        "Profit margin calculation"
      ]
    }
  }
}
